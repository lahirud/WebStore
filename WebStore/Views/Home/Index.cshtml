@model HomeViewModel

<div>
    <h1>@Model.Title</h1>
    <div>
        @foreach (var cake in Model.Cakes)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="@cake.ImageThumbnailUrl" alt="">
                    <div class="caption">
                        <h3 class="pull-right">@cake.Price.ToString("c")</h3>
                        <h3>
                            <a asp-controller="Home" asp-action="Details"
                               asp-route-id="@cake.Id">@cake.Name</a>
                        </h3>
                        <p>@cake.ShortDescription</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



